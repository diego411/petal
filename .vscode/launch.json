    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Vision CNN CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "ml.clis.vision_cnn_cli",
            "args": [
                "fit", 
                "--config", "ml/scripts/vision_cnn/config.yaml", 
                "--trainer.logger.save_dir", "ml/experiments",
                "--trainer.logger.name", "debug_run",
                "--trainer.logger.version", "version_0",
                "--trainer.callbacks.dirpath", "ml/experiments/debug_run/version_0/checkpoints"
            ]
        },
        {
            "name": "Debug Vision CNN CLI PLUS",
            "type": "debugpy",
            "request": "launch",
            "module": "ml.clis.vision_cnn_cli_plus",
            "args": [
                "fit", 
                "--config", "ml/scripts/vision_cnn/config.yaml", 
                "--trainer.logger.save_dir", "ml/experiments",
                "--trainer.logger.name", "debug_run",
                "--trainer.logger.version", "version_0",
                "--trainer.callbacks.dirpath", "ml/experiments/debug_run/version_0/checkpoints"
            ]
        },
        {
            "name": "Debug data util",
            "type": "debugpy",
            "request": "launch",
            "module": "ml.data.data_util"
        },
        {
            "name": "Debug summarise experiments",
            "type": "debugpy",
            "request": "launch",
            "module": "ml.scripts.summarise_experiments"
        }
    ]
}