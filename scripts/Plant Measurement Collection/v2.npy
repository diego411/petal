USER_NAME = "<USER_NAME>"
SERVER_IP = "<IP_ADDRESS>"
URL = "http://" + SERVER_IP + ":5000/"
UPDATE_URL = URL + "update/" + USER_NAME

const ADC_PIN = C_PIN_06        # ACD input on IN06
const THRESHOLD = 150

i = 0
out:byte[600]

clear()
drawText(50, 100, USER_NAME)
update()

while(true):      
    voltage = readADC(ADC_PIN, 1)
    
    hByte = byteToHex(voltage>>8)
    lByte = byteToHex(voltage&0xFF)

    index = 4*i  # das ist die Startvariable fÃ¼r das Byte-Muster
    out[index] = hByte[0]
    out[index+1] = hByte[1]
    out[index+2] = lByte[0]
    out[index+3] = lByte[1]

    i = i + 1

    if i >= THRESHOLD:
        i = 0
        addRequestHeader("Content-Type", "application/json")
        postRequest(UPDATE_URL, out)
        clearRequestHeaders()
        out = ""